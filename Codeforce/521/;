#include <iostream>

using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	int q;
	cin >> q;
	for (int i = 0; i < q; i++) {
		int a, b, k;
		cin >> a >> b >> k;
		int even_times = k / 2;
		int additional_move = k % 2;
		cout << (a - b) * even_times + a * additional_move << '\n';
	}
	return 0;
}
